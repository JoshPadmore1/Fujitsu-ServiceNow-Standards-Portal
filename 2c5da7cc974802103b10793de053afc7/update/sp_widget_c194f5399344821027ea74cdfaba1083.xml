        <script><![CDATA[(function() {
  /* populate the 'data' object */
  /* e.g., data.table = $sp.getValue('table'); */
	data.task =[];
	
	var gr = new GlideRecord('sc_task');
	gr.addQuery('assigned_to', gs.getUserID());
	gr.query()
	
	while(gr.next()){
		var task_data ={};
		task_data.number = gr.getValue('number');
		task_data.state = gr.getAttribute('state');
		task_data.priority = gr.getValue('priority');
		
		data.task.push(task_data);
	}
	

})();]]></script>
